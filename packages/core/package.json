{
  "name": "@brainhubeu/license-auditor-core",
  "version": "3.0.0",
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "module": "./dist/index.js",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/types/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "npm run clean && tsc -p tsconfig.build.json",
    "clean": "rm -rf dist",
    "dev": "tsc --watch",
    "start": "bun src/audit-licenses.ts",
    "typecheck": "tsgo --noEmit --verbatimModuleSyntax false",
    "typecheck:tsc": "tsc --noEmit true --verbatimModuleSyntax false",
    "test:unit": "vitest run",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@license-auditor/data": "*",
    "spdx-expression-parse": "4.0.0",
    "zod": "3.23.8"
  },
  "devDependencies": {
    "@license-auditor/typescript-config": "*",
    "@types/node": "22.10.2",
    "@types/spdx-expression-parse": "3.0.5",
    "@vitest/coverage-v8": "2.1.5",
    "typescript": "5.6.2",
    "vitest": "2.1.5"
  }
}
